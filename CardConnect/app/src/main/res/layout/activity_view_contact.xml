<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cardconnect.Profile">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/toolbar"/>



    <Button
        android:id="@+id/btn_save_contact"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_message"
        android:layout_marginTop="104dp"
        android:layout_marginLeft="30dp"
        android:text="@string/message_save_contact" />

    <Button
        android:id="@+id/btn_edit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_save_contact"
        android:layout_marginTop="-48dp"
        android:layout_marginLeft="145dp"
        android:text="@string/message_edit" />

    <Button
        android:id="@+id/btn_delete"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_edit"
        android:layout_marginTop="-48dp"
        android:layout_marginLeft="260dp"
        android:text="@string/message_delete" />


</RelativeLayout>